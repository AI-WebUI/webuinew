.ui-modal-shade-bg {
	position: absolute;
	top: 0;
	left: 0;
	display: none;
	width: 100%;
	height: 100%;
	background-color: rgba(0,0,0,.4);
	z-index: 1001;
}
.ui-modal{
	width: auto;
	height: auto;
	display: block;
	overflow: hidden;
	border-radius: 10px;
	margin: 0 auto;
	background-color: #fff;
	position: absolute;
	top: 50%;
	left: 50%;
	font-family: "微软雅黑";
	max-width: 630px;
	min-width: 420px;
}
.ui-modal-title{
	padding: 0;
    text-align: center;
    font-size: 16px;
    color: #333333;
    line-height: 40px;
    background-color: #fff;
    border-bottom: 1px solid #d3d3d3;
}
.ui-modal-title span{
	width: 12px;
	height: 12px;
	display: inline-block;
	position: absolute;
	top: 0;
	right: 0;
	padding: 14px 20px;
}
.ui-modal-title span i{
	display:block;
	width: 12px;
	height: 12px;
	float: left;
	background: url(../img/close.png) center no-repeat;
	background-size:100% 100%; 
}
.ui-modal-content{
	text-align: center;
	padding: 26px 25px;
	font-size: 15px;
	line-height: 23px;
	color: #333;
}
.ui-modal-btndiv{
	display: block;
    position: relative;
    height: 40px;
    line-height: 40px;
    width: 100%;
    border-top:1px solid #d3d3d3;
}
.ui-modal-btndiv .ui-modal-btn{
	border: none;
	width: 100%;
	background-color: #fff;
	outline: none;
	resize: none;
	font-size: 18px;
	color: #44ABE5;
	line-height: 40px;
	-webkit-tap-highlight-color:rgba(0,0,0,0);
	-webkit-tap-highlight-color: transparent;
}
.ui-modal-btndiv .ui-modal-btn:active{
	background-color: #D3D3D3;
	color: #268BC4;
}
